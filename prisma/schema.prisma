generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
// User management with Role-Based Access Control
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  role          Role     @default(PLAYER) // PLAYER, DEPT_HEAD, ASSISTANT
  department    String?  // Technical, Medical, Admin
  complaints    Complaint[] @relation("SentComplaints")
}

enum Role {
  PLAYER
  DEPT_HEAD
  ASSISTANT
  ADMIN
}

// System for Player and Fan feedback
model Complaint {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  senderType  String   // "PLAYER" or "FAN"
  subject     String
  message     String
  status      String   @default("PENDING") // PENDING, REVIEWED, RESOLVED
  assignedTo  User?    @relation("SentComplaints", fields: [userId], references: [id])
  userId      String?
}